section.pt-20.pb-20.has-background-white-ter
  .container 
    input.input(type='text', placeholder='Text input')
section.has-background-white-ter.pb-40.h100
   .container
      .card(ng-repeat="project in projects")
        .card-header.card-content
            .media
              .media-left
                figure.image.is-48x48
                  img(src='https://bulma.io/images/placeholders/96x96.png', alt='Placeholder image' class='avatar-small')
            .media-content
               p.title.is-6 {{project.org.name}}
               p.subtitle.is-6 {{project.org.desc}}
            .time {{project.timeadded}}
        .card-content
            | {{project.name}} 
            | {{project.desc}}   
        .card-content
            .columns.tasks(ng-repeat="task in project.tasks")
                .column.is-one-third
                    .name.title.is-6 {{task.name}}
                    .description.subtitle.is-6 {{task.desc}}
                .column
                    a.button.is-info.is-outlined(href='#') Apply now